@using PraktikaSon2.Areas.Admin.ViewModels;
@model CreateProductVM

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <form class="forms-sample" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label asp-for="Photo" for="exampleInputName1">Photo</label>
                    <input asp-for="Photo"  class="form-control" id="exampleInputName1" placeholder="Photo">
                    <span asp-validation-for="Photo"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Name" for="exampleInputName1">Name</label>
                    <input asp-for="Name" type="text" class="form-control" id="exampleInputName1" placeholder="Name">
                    <span asp-validation-for="Name"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Price" for="exampleInputName1">Price</label>
                    <input asp-for="Price" type="text" class="form-control" id="exampleInputName1" placeholder="Price">
                    <span asp-validation-for="Price"></span>
                </div>
               
                <button type="submit" class="btn btn-primary me-2">Submit</button>
                <button class="btn btn-light">Cancel</button>
            </form>
        </div>
    </div>
</div>


@using Praktikaimt.Models;

@model List<Department>
@{
    int count = 0;
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Create Table</h4>
            <a asp-action="Create" asp-controller="department" class="btn btn-success">Create</a>
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>
                                User
                            </th>
                            <th>
                                First name
                            </th>
                            <th>
                                Progress
                            </th>
                            <th>
                                Amount
                            </th>
                            <th>
                                Deadline
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (Department department in Model)
                        {
                            count++;
                            <tr>
                                <td>
                                @count
                                </td>
                                <td>
                                  @department.Name
                                </td>
                                <td>
                                   @department.Description
                                </td>
                                <td class="py-1">
                                    <img src="~/assets/images/@department.Image" alt="image" />
                                </td>
                                <td>
                                    <a asp-action="Update" asp-controller="department" asp-route-id="@department.Id" class="btn btn-success">Update</a>
                                    <a asp-action="Delete" asp-controller="department" asp-route-id="@department.Id" class="btn btn-success">Delete</a>
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@using Praktikaimt.Areas.Admin.ViewModels;

@model UpdateDepartmentVM


<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Basic form elements</h4>

            <form class="forms-sample" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <img style="height:125px;width:126px;" src="~/assets/images/@Model.Image" />
                    <input asp-for="Image" type="hidden" class="form-control" placeholder="image">

                </div>
                <div class="form-group">
                    <label asp-for="Photo" for="exampleInputName1">Photo</label>
                    <input asp-for="Photo" class="form-control" placeholder="Photo">
                    <span asp-validation-for="Photo"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Name" for="exampleInputName1">Name</label>
                    <input asp-for="Name" class="form-control" placeholder="Name">
                    <span asp-validation-for="Name"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description" for="exampleInputName1">Description</label>
                    <input asp-for="Description" class="form-control" placeholder="Description">
                    <span asp-validation-for="Description"></span>
                </div>

                <button type="submit" class="btn btn-primary me-2">Submit</button>
                <a asp-action="index" asp-controller="department" class="btn btn-success">Cancel</a>
            </form>
        </div>
    </div>
</div>
